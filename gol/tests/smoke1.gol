


root ball fallback {
    try_to_place_to(ball,bin) // the objects in bb that denote ball and bin
    ask_for_help()
}

sequence try_to_place_to(obj:object, dest:object){
    fallback {
        ball_found(obj)
        find_ball(obj)
    }
    fallback {
        close(obj)
        approach(obj)
    }
    fallback {
        grasped(obj)
        grasp(obj)
    }
    fallback {
        close(dest)
        approach(dest)
    }
    fallback {
        placed(obj)
        place(obj, dest)
    }
}

cond grasped(obj:object)
cond ball_found(obj:object)
cond close(obj:object)
cond placed(obj:object)

impl approach(obj:object)
impl grasp(obj:object)
impl find_ball(obj:object)
impl ask_for_help()
impl place(obj:object,dest:object)